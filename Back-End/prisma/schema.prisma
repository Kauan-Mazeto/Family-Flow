generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./gest-familiar-db"
}

model User {
  id            Int   @id @default(autoincrement())      
  name          String                                
  email         String   @unique                        
  password_hash String                                
  avatar_url    String?                                
  is_active     Boolean  @default(true)               
  is_admin      Boolean  @default(false)
  created_at    DateTime @default(now())                                    
}


